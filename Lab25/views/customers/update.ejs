<h1>Customer Infomation</h1>
<form action="" method="post">
    <div class="mb-3">
        <label for="">Ten</label>
        <input type="text" name="name" placeholder="Ten..." class="form-control" value="<%= customerData.name %>">
        <span class="text-danger"><%= validate.getError(errors, 'name') %></span>
    </div>
    <div class="mb-3">
        <label for="">Email</label>
        <input type="text" name="email" placeholder="Email..." class="form-control" value="<%= customerData.email %>">
        <span class="text-danger"><%= validate.getError(errors, 'email') %></span>
    </div>
    <div class="mb-3">
        <label for="">Trang thai</label>
        <select name="status" class="form-select">
            <option <%= (customerData.status === 0)? 'selected' : '' %> class="statusOption" value="0">Chua kich hoat</option>
            <option <%= (customerData.status === 1)? 'selected' : '' %> class="statusOption" value="1">Kich hoat</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="">Tinh/Thanh pho</label>
        <select name="province" class="form-select">
            <option value="0">Chon Tinh/Thanh pho</option>
            <% provinceList.forEach(({id, name}) => { %>
                <option <%= (customerData.province_id === id)? 'selected' : '' %> value="<%= id %>"><%= name %></option>
            <%}); %>
        </select>
    </div>

    <button class="btn btn-success">Luu</button>
    <a href="/customers" class="btn btn-danger">Huy</a>
</form>