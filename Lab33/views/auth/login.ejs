<h1 class="text-primary text-center mt-4">Đăng nhập tài khoản</h1>

<% if(error?.length) {%>
<div class="alert alert-danger mt-3 w-50 mx-auto"><%= error %></div>
<% } %>

<form action="" method="post" class="w-50 mx-auto">
  <div class="mt-4">
    <label for="email">Email</label>
    <input
      type="email"
      name="email"
      class="form-control"
      placeholder="Email..."
      value="<%= oldEmail %>"
      required
    />
  </div>
  <div class="mt-4">
    <label for="">Mật khẩu</label>
    <input
      type="password"
      name="password"
      class="form-control"
      placeholder="Mật khẩu..."
      required
    />
  </div>
  <div class="d-grid mt-3">
    <button type="submit" class="btn btn-primary">Đăng nhập</button>
  </div>
</form>
