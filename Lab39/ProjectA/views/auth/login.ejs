<h1 class="text-center mt-5 mb-3 text-primary" style="font-size: 54px; font-weight: 600;">Project A - Login Form</h1>

<% if(error?.length) {%>
    <div class="alert alert-danger" style="margin: 0 auto; width: 70%;">
        <%= error %>
    </div>
    <% } %>
        <form action="" method="post" class="mt-3" style="margin: 0 auto; width: 70%;">
            <div class="row mb-3" style="font-size: 20px;">
                <label for="">Email:</label>
                <input type="email" name="email" placeholder="Email..." class="form-control" required>
            </div>
            <div class="row" style="font-size: 20px;">
                <label for="">Mật khẩu:</label>
                <input type="password" name="password" placeholder="Mật khẩu..." class="form-control" required>
            </div>
            <div class="row mt-4">
                <button class=" btn btn-primary py-2" style="font-size: 20px;">Đăng nhập</button>
            </div>
        </form>